<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Modular Origami"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tetrahedron"
                android:layout_width="match_parent"
                android:layout_height="324dp"
                android:contentDescription="@string/action_settings"
                android:onClick="tetrahedronVideo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/intersectingtetrahedra" />

            <ImageView
                android:id="@+id/swan"
                android:layout_width="match_parent"
                android:layout_height="337dp"
                android:contentDescription="@string/action_settings"
                android:onClick="swanVideo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/swan" />

            <ImageView
                android:id="@+id/curlything"
                android:layout_width="match_parent"
                android:layout_height="273dp"
                android:contentDescription="@string/action_settings"
                android:onClick="curlythingVideo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/curlything" />

            <!--<ImageView-->
                <!--android:id="@+id/spikyball"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="209dp"-->
                <!--android:contentDescription="@string/action_settings"-->
                <!--android:onClick="spikyballVideo"-->
                <!--android:scaleType="fitCenter"-->
                <!--app:srcCompat="@drawable/spikyball" />-->

            <ImageView
                android:id="@+id/popupball"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:contentDescription="@string/action_settings"
                android:onClick="popupballVideo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/popupball" />

            <ImageView
                android:id="@+id/turnything"
                android:layout_width="match_parent"
                android:layout_height="236dp"
                android:contentDescription="@string/action_settings"
                android:onClick="turnythingVideo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/turnything" />

            <ImageView
                android:id="@+id/phizz"
                android:layout_width="match_parent"
                android:layout_height="337dp"
                android:contentDescription="@string/action_settings"
                android:onClick="phizzVideo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/phizz" />

            <ImageView
                android:id="@+id/christmasstar"
                android:layout_width="match_parent"
                android:layout_height="269dp"
                android:contentDescription="@string/action_settings"
                android:onClick="christmasstarVideo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/christmasstar" />

            <ImageView
                android:id="@+id/ninjastar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_settings"
                android:onClick="ninjastarVideo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ninjastar" />

            <ImageView
                android:id="@+id/transformingrose"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:contentDescription="@string/action_settings"
                android:onClick="transformingroseVideo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/transformingrose" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>